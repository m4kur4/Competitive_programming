{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ compile",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "\"${file}\"",
        "-o",
        "exe\\${fileBasenameNoExtension}a.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}